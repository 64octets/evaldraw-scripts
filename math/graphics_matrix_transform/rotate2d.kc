()
{
   cls(0);

   x=150; y = 0;
   
   value = mousx/xres * 2*PI;
   rotate2d(x,y,value );

   cx = xres/2; cy = yres/2;
   moveto(cx,cy);   
   lineto(cx+x,cy-y);
   

   printf("\nDegrees:%g", value*180/PI);
   
   sleep(1);
}

rotate2d(&x,&y,angle)
{
   x1=0,y1=0;
   sa=0,ca=0;
   
   x1 = x;
   y1 = y;
   sa = sin(angle);
   ca = cos(angle);
   
   x = x1 * ca - y1 * sa;
   y = y1 * ca + x1 * sa;
}